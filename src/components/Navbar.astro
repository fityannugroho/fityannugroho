---
import { ThemeToggle } from "./ThemeToggle";
---

<nav
  class="sticky top-0 z-50 py-2 border-b border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
  <div class="container flex items-center justify-between md:px-14 lg:px-32">
    {/* Left */}
    <div class="flex items-center gap-4">
      <a href="/" class="flex items-center gap-1">
        <img src="/f-logo.ico" alt="Logo" class="w-6 h-6" />
        <span class="text-primary md:inline-block hidden">fityannugroho</span>
      </a>
    </div>

    {/* Right */}
    <div class="flex items-center gap-4">
      {/* Icon group */}
      <div class="flex gap-1">
        <ThemeToggle client:load variant="ghost" />
      </div>
    </div>
  </div>
</nav>
