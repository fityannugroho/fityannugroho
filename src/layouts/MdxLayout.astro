---
import type { MDXLayoutProps } from "astro";
import type { Props as MainLayoutProps } from "./MainLayout.astro";
import MainLayout from "./MainLayout.astro";

type MdxLayoutFrontmatter = MainLayoutProps & {
  /**
   * Disable prose styling for this page.
   */
  disableProse?: boolean;
};

export type Props = MDXLayoutProps<MdxLayoutFrontmatter>;

const { disableProse, ...props } = Astro.props.frontmatter;
---

<MainLayout {...props}>
  <article
    class:list={[
      !disableProse && "prose dark:prose-invert mx-auto",
    ]}
  >
    <slot />
  </article>
</MainLayout>
