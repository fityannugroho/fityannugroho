---
import Navbar from "@/components/Navbar.astro";
import type { Props as BaseLayoutProps } from "./BaseLayout.astro";
import BaseLayout from "./BaseLayout.astro";
import Footer from "@/components/Footer.astro";
import type { MarkdownLayoutProps } from "astro";

type MainLayoutProps = BaseLayoutProps & {
  /**
   * The class name for the main element.
   */
  mainClass?: string;
};

export type Props = MarkdownLayoutProps<MainLayoutProps> & MainLayoutProps;

const { mainClass, ...props } = Astro.props.frontmatter || Astro.props;
---

<BaseLayout {...props}>
  <Navbar />
  <main class={mainClass}>
    <slot />
  </main>
  <Footer />
</BaseLayout>
